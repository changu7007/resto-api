<!DOCTYPE html>
<html>
  <head>
    <title>Inventory Report</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 20px;
      }
      h1 {
        text-align: center;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
      }
      th,
      td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
      }
      th {
        background-color: #f4f4f4;
      }
    </style>
  </head>
  <body>
    <h1>Inventory Report</h1>
    <p>Restaurant: <%= restaurantName %></p>
    <p>Report Period: <%= startDate %> to <%= endDate %></p>

    <table>
      <thead>
        <tr>
          <th>Purchase ID</th>
          <th>Vendor</th>
          <th>Item</th>
          <th>Quantity</th>
          <th>Total Price</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach(purchase => { %>
        <tr>
          <td><%= purchase.id %></td>
          <td><%= purchase.vendor.name %></td>
          <td>
            <% purchase.purchaseItems.forEach(item => { %>
            <p><%= item.rawMaterialName %>: <%= item.purchaseQuantity %></p>
            <% }); %>
          </td>
          <td>â‚¹<%= purchase.totalAmount %></td>
          <td><%= new Date(purchase.createdAt).toLocaleDateString() %></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </body>
</html>
