<!DOCTYPE html>
<html>
  <head>
    <title>Staff Payroll Report</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 20px;
      }
      h1 {
        text-align: center;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
      }
      th,
      td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
      }
      th {
        background-color: #f4f4f4;
      }
    </style>
  </head>
  <body>
    <h1>Staff Payroll Report</h1>
    <p>Restaurant: <%= restaurantName %></p>
    <p>Report Period: <%= startDate %> to <%= endDate %></p>

    <table>
      <thead>
        <tr>
          <th>Staff Name</th>
          <th>Email</th>
          <th>Role</th>
          <th>Pay Frequency</th>
          <th>Amount Paid</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach(payroll => { %>
        <tr>
          <td><%= payroll.staff.name %></td>
          <td><%= payroll.staff.email %></td>
          <td><%= payroll.staff.role %></td>
          <td><%= payroll.payFrequency %></td>
          <td>â‚¹<%= payroll.amountPaid %></td>
          <td><%= new Date(payroll.payDate).toLocaleDateString() %></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </body>
</html>
