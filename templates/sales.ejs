<!DOCTYPE html>
<html>
  <head>
    <title>Sales Report</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 20px;
      }
      h1 {
        text-align: center;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
      }
      th,
      td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
      }
      th {
        background-color: #f4f4f4;
      }
    </style>
  </head>
  <body>
    <h1>Sales Report</h1>
    <p>Restaurant: <%= restaurantName %></p>
    <p>Report Period: <%= startDate %> to <%= endDate %></p>

    <table>
      <thead>
        <tr>
          <th>Order ID</th>
          <th>Customer</th>
          <th>Total Amount</th>
          <th>Order Date</th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach(order => { %>
        <tr>
          <td><%= order.id %></td>
          <td><%= order.username || "N/A" %></td>
          <td>â‚¹<%= order.totalAmount %></td>
          <td><%= new Date(order.createdAt).toLocaleDateString() %></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </body>
</html>
